		//3)
		int[] Nums3 = new int[10];
		Scanner sc = new Scanner(System.in);
		
		for(int i=0; i<10; i++) {
			int input = sc.nextInt();
			if(input%2==0){
				Nums3[i] = input;
			}else if(input==0) {
				break;
			}
		}
		//출력
		for(int i=0; i<Nums3.length; i++){
			System.out.println(Nums3[i]+" ");
