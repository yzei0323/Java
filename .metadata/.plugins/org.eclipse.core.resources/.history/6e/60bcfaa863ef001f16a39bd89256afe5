package day05.practice;

public class 배열실습3_4 {

	public static void main(String[] args) {
	
		//3. 응용배열문제
		
		//4) char 2차원배열(5*5) 배열을 만들고 배열의 테두리 요소에 '*'넣기
		
		char[][] stars = new char[5][5];
		
		stars[0][0] = '*';
		stars[0][1] = '*';
		stars[0][2] = '*';
		stars[0][3] = '*';
		stars[0][4] = '*';
		stars[1][0] = '*';
		stars[1][4] = '*';
		stars[2][0] = '*';
		stars[2][4] = '*';
		stars[3][0] = '*';
		stars[3][4] = '*';
		stars[4][0] = '*';
		stars[4][1] = '*';
		stars[4][2] = '*';
		stars[4][3] = '*';
		stars[4][4] = '*';
		  
		  
		  for(int j=0; j<5; j++) {
			  System.out.print(stars[0][j]);
		  }
	}

}
