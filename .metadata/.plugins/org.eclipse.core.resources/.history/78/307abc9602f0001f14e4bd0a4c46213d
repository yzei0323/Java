package day06;

public class 학생삭제하기2 {

	public static void main(String[] args) {
		
		
		//학생정보 (학생이름) 삭제하기
		
		String[] names  = new String[5];
		 
		names[0]="정연수";
		names[1]="최지태";
		names[2]="김보성";
		names[3]="황예지";
		names[4]="최하은";
		
		//학생조회
		for(int i=0; i<names.length; i++) {
			System.out.println((i+1)+" "+names[i]);
		}
		
		//삭제할 학생번호 입력 받는다
		int deleteNo = sc.nextInt(); //2
		
		deleteNo=deleteNo-1;   //1
	}

}
